<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <% carousels.each_with_index do |carousel, index| %>
        <li data-target="#myCarousel" data-slide-to="<%= index %>"<%= index == 0 ? 'class="active"' : '' %>></li>
        <% end %>
    </ol>
    <div class="carousel-inner">
        <% carousels.each_with_index do |carousel, index| %>
        <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
            <img style="margin-top: <%= carousel.offset ? carousel.offset : 0 %>px" class="slide" src="<%= carousel.image %>" alt="slide">
            <div class="container">
                <div class="carousel-caption d-none d-md-block text-left">
                    <h1 style="color: <%= carousel.color ? carousel.color : 'black' %>"><%= carousel.title %></h1>
                    <p style="color: <%= carousel.color ? carousel.color : 'black' %>"><%= carousel.baseline %></p>
                    <button class="reserve-now btn btn-primary">Reservez maintenant!</button>
                </div>
            </div>
        </div>
        <% end %>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>